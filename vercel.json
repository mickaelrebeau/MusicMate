{
	"version": 2,
	"github": {
		"enabled": false
	},
	"builds": [
		{
			"src": "/backend/dist/main.js",
			"use": "@now/node",
            "build": "pnpm run build:backend"
		},
		{
			"src": "/frontend/dist/*",
			"use": "@now/static",
			"build": "pnpm run build:frontend"
		}
	],
	"routes": [
		{ "src": "/api/(.*)", "dest": "/backend/dist/main.js" },
		{ "handle": "filesystem" },
		{ "src": "/assets/(.*)", "dest": "/frontend/dist/assets/$1" },
		{ "src": "/(.*).(js|css|ico)", "dest": "/frontend/dist/$1.$2" },
		{ "src": "/(.*)", "dest": "/frontend/dist/index.html" }
	]
}
